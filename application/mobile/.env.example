# Environment Configuration for Speedometer Mobile App

# App Configuration
APP_NAME=SpeedometerApp
APP_VERSION=1.0.0
ENVIRONMENT=development

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_API_KEY=your-web-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456
FIREBASE_MEASUREMENT_ID=G-ABCDEF1234

# API Server Configuration (Optional - if using custom backend)
API_BASE_URL=https://your-api-server.herokuapp.com
API_TIMEOUT=30000
WEBSOCKET_URL=wss://your-api-server.herokuapp.com

# Device Configuration
DEFAULT_DEVICE_ID=speedometer_001
DEFAULT_WHEEL_CIRCUMFERENCE=2.1
DEFAULT_SPEED_THRESHOLD=50
DEFAULT_DATA_INTERVAL=30

# Notification Configuration
ENABLE_PUSH_NOTIFICATIONS=true
NOTIFICATION_SOUND=default
VIBRATION_ENABLED=true
SPEED_ALERT_THRESHOLD=50
BATTERY_ALERT_THRESHOLD=20

# Chart Configuration
CHART_DATA_POINTS_LIMIT=50
CHART_REFRESH_INTERVAL=5000
CHART_ANIMATION_ENABLED=true

# Offline Configuration
CACHE_SIZE_LIMIT=100
OFFLINE_DATA_RETENTION_DAYS=7
AUTO_SYNC_ENABLED=true

# Debug Configuration
DEBUG_MODE=false
LOG_LEVEL=info
CRASH_REPORTING_ENABLED=true
ANALYTICS_ENABLED=true

# Feature Flags
ENABLE_MAPS=true
ENABLE_TRIP_DETECTION=true
ENABLE_GEOFENCING=false
ENABLE_FLEET_MANAGEMENT=false

# Security Configuration
API_KEY_VALIDATION=true
SSL_PINNING_ENABLED=false
BIOMETRIC_AUTH_ENABLED=false

# UI Configuration
THEME_MODE=auto
PRIMARY_COLOR=#2196F3
ACCENT_COLOR=#21CBF3
DARK_MODE_ENABLED=true

# Performance Configuration
IMAGE_CACHE_SIZE=50
NETWORK_TIMEOUT=10000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000