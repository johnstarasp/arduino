# Production Environment Configuration

APP_NAME=SpeedometerApp
APP_VERSION=1.0.0
ENVIRONMENT=production

# Firebase Configuration (Production Project)
FIREBASE_PROJECT_ID=speedometer-iot-prod
FIREBASE_API_KEY=your-prod-web-api-key
FIREBASE_AUTH_DOMAIN=speedometer-iot-prod.firebaseapp.com
FIREBASE_DATABASE_URL=https://speedometer-iot-prod-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=speedometer-iot-prod.appspot.com
FIREBASE_MESSAGING_SENDER_ID=987654321
FIREBASE_APP_ID=1:987654321:web:prod123456
FIREBASE_MEASUREMENT_ID=G-PROD1234

# API Server Configuration (Production)
API_BASE_URL=https://speedometer-api.herokuapp.com
API_TIMEOUT=30000
WEBSOCKET_URL=wss://speedometer-api.herokuapp.com

# Device Configuration
DEFAULT_DEVICE_ID=speedometer_001
DEFAULT_WHEEL_CIRCUMFERENCE=2.1
DEFAULT_SPEED_THRESHOLD=50
DEFAULT_DATA_INTERVAL=30

# Notification Configuration
ENABLE_PUSH_NOTIFICATIONS=true
NOTIFICATION_SOUND=default
VIBRATION_ENABLED=true
SPEED_ALERT_THRESHOLD=50
BATTERY_ALERT_THRESHOLD=20

# Debug Configuration (Production)
DEBUG_MODE=false
LOG_LEVEL=warn
CRASH_REPORTING_ENABLED=true
ANALYTICS_ENABLED=true

# Production Features
ENABLE_MAPS=true
ENABLE_TRIP_DETECTION=true
ENABLE_GEOFENCING=true
ENABLE_FLEET_MANAGEMENT=true

# Security (Production)
API_KEY_VALIDATION=true
SSL_PINNING_ENABLED=true
BIOMETRIC_AUTH_ENABLED=true

# Performance (Production)
CHART_DATA_POINTS_LIMIT=100
CHART_REFRESH_INTERVAL=5000
NETWORK_TIMEOUT=10000
RETRY_ATTEMPTS=3
RETRY_DELAY=2000